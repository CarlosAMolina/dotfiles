#!/usr/bin/env bash

set -e # Exit if any command fails.

dry_run="0"

while [[ $# -gt 0 ]]; do
    echo "ARG: \"$1\""
    if [[ "$1" == "--dry" ]]; then
        dry_run="1"
    fi
    shift
done

log() {
    if [[ $dry_run == "1" ]]; then
        echo "[DRY_RUN] $@"
    else
        echo "[DEBUG] $@"
    fi
}

execute() {
    log "execute $@"
    if [[ $dry_run == "1" ]]; then
        return
    fi
    eval "$@"
}

case $(uname) in
  *BSD*)
    execute sudo pkg install -y node
    execute sudo pkg install -y npm
    ;;
  *)
    # https://github.com/nvm-sh/nvm
    execute "wget -qO- https://raw.githubusercontent.com/nvm-sh/nvm/v0.40.1/install.sh | bash"
    execute source $HOME/.nvm/nvm.sh
    execute nvm install --lts --latest-npm
    ;;
esac
execute node -v # Check command works
execute npm -v # Check command works
