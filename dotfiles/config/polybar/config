[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/bar1]
width = 100%
height = 27
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1

modules-left = xworkspaces
modules-right = pulseaudio filesystem cpu memoryram memoryswap network-wireless network-ethernet backlight battery temperature date xkeyboard menupower

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

;Top or bottom position
bottom = true

;Locale. Used in timezone, for example
locale = es_ES.UTF-8

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
label = BL %percentage%%

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 100

time-format = %H:%M
format-charging = <label-charging>
format-discharging = <label-discharging>
format-charging-prefix = +
format-discharging-prefix = -
format-full-prefix = "full"
format-charging-prefix-foreground = ${colors.foreground-alt}
format-discharging-prefix-foreground = ${colors.foreground-alt}
format-full-prefix-foreground = ${colors.foreground-alt}

label-charging = %percentage%% (%time%)
label-discharging = %percentage%% (%time%)

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "cpu "
format-prefix-foreground = ${colors.foreground-alt}
format = <ramp-coreload>

; Spacing between individual per-core ramps
ramp-coreload-spacing = 1
ramp-coreload-0 = 0X%
ramp-coreload-1 = 1X%
ramp-coreload-2 = 2X%
ramp-coreload-3 = 3X%
ramp-coreload-4 = 4X%
ramp-coreload-5 = 5X%
ramp-coreload-6 = 6X%
ramp-coreload-7 = 7X%
ramp-coreload-8 = 8X%
ramp-coreload-9 = 9X%
ramp-coreload-10 = 100%

ramp-coreload-9-foreground = ${colors.alert}
ramp-coreload-10-foreground = ${colors.alert}

[module/date]
type = internal/date
interval = 1

date = " %Y-%m-%d %a,"
time = %H:%M

format-prefix-foreground = ${colors.foreground-alt}

label = %date% %time%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %used%/%total% (%percentage_used%%)
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[memory]
type = internal/memory
interval = 2
format-prefix-foreground = ${colors.foreground-alt}

[module/memoryram]
inherit = memory
format-prefix = "mem "
label = %percentage_used%%/%gb_total%

[module/memoryswap]
inherit = memory
format-prefix = "swap "
label = %percentage_swap_used%%/%gb_swap_total%

[module/menupower]
type = custom/menu

format-spacing = 1

label-open = system
label-separator = |

menu-0-0 = power off
menu-0-0-exec = systemctl poweroff
menu-0-1 = reboot
menu-0-1-exec = systemctl reboot
menu-0-2 = suspend
menu-0-2-exec = $HOME/.config/i3lock/lockscreen && systemctl suspend
menu-0-3 = logout
menu-0-3-exec = bspc quit
menu-0-4 = lock screen
menu-0-4-exec = $HOME/.config/i3lock/lockscreen
menu-0-5 = cancel
menu-0-5-foreground = ${colors.secondary}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-foreground = ${colors.foreground-alt}

[module/network]
type = internal/network
interval = 3.0
format-connected = <label-connected>
label-connected = ${self.label}
format-disconnected = <label-disconnected>
label-disconnected = ${self.label}
label-disconnected-foreground = ${colors.background-alt}

[module/network-ethernet]
inherit = module/network
interface = ${env:INTERFACE_ETHERNET}
label = eth

[module/network-wireless]
inherit = module/network
interface = ${env:INTERFACE_WIRELESS}
label = wlan

[module/pulseaudio]
type = internal/pulseaudio
interval = 5

format-volume = <label-volume>
label-volume = â™¬ %percentage%%

click-right = pavucontrol
label-muted = muted
label-muted-foreground = #66

[module/xkeyboard]
type = internal/xkeyboard

format-prefix-foreground = ${colors.foreground-alt}

label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}

[module/xworkspaces]
type = internal/xworkspaces
enable-click = true
format = <label-state>
label-active = %name%
label-active-foreground = #ffffff
label-active-background = #3f3f3f
label-active-padding = 4
label-occupied = %name%
label-occupied-padding = 2
label-urgent = %name%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 4
label-empty = %name%
label-empty-foreground = #55
label-empty-padding = 2

[settings]
screenchange-reload = true

