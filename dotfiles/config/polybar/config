; https://github.com/polybar/polybar
;==========================================================

[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/bar1]
width = 100%
height = 27
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1

modules-left = xworkspaces
modules-right = filesystem cpu memoryram memoryswap temperature xkeyboard network-wireless pulseaudio date menupower

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

;Top or bottom position
bottom = true

;Locale. Used in timezone, for example
locale = es_ES.UTF-8

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "cpu "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage-cores%

[module/date]
type = internal/date
interval = 1

date = " %Y-%m-%d %a,"
time = %H:%M

format-prefix = date
format-prefix-foreground = ${colors.foreground-alt}

label = %date% %time%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %used%/%total% (%percentage_used%%)
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[memory]
type = internal/memory
interval = 2
format-prefix-foreground = ${colors.foreground-alt}

[module/memoryram]
inherit = memory
format-prefix = "mem "
label = %percentage_used%%/%gb_total%

[module/memoryswap]
inherit = memory
format-prefix = "swap "
label = %percentage_swap_used%%/%gb_swap_total%

[module/menupower]
type = custom/menu

format-spacing = 1

label-open = system
label-separator = |

menu-0-0 = power off
menu-0-0-exec = systemctl poweroff
menu-0-1 = reboot
menu-0-1-exec = systemctl reboot
menu-0-2 = suspend
menu-0-2-exec = i3lock -i $HOME/Imágenes/lockscreen.png && systemctl suspend
menu-0-3 = logout
menu-0-3-exec = bspc quit
menu-0-4 = lock screen
menu-0-4-exec = i3lock -i $HOME/Imágenes/lockscreen.png
menu-0-5 = cancel
menu-0-5-foreground = ${colors.secondary}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = temp
ramp-foreground = ${colors.foreground-alt}

[module/network-wireless]
type = internal/network
interface = wlp3s0
interval = 3.0
label-connected = %essid%
label-disconnected = not connected
label-disconnected-foreground = #66ffffff

[module/pulseaudio]
type = internal/pulseaudio
interval = 5
click-right = pavucontrol
label-muted = muted
label-muted-foreground = #66

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "keyboard "
format-prefix-foreground = ${colors.foreground-alt}

label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}

[module/xworkspaces]
type = internal/xworkspaces
enable-click = true
format = <label-state>
label-active = %name%
label-active-foreground = #ffffff
label-active-background = #3f3f3f
label-active-padding = 4
label-occupied = %name%
label-occupied-padding = 2
label-urgent = %name%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 4
label-empty = %name%
label-empty-foreground = #55
label-empty-padding = 2

[settings]
screenchange-reload = true

