# i3status configuration file.
# see "man i3status" for documentation.
# https://i3wm.org/docs/i3status.html

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

order += "volume master"
order += "disk /"
order += "cpu_usage"
order += "memory"
order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_temperature 0"
order += "battery all"
order += "tztime local"

battery all {
        format = "%status %percentage %remaining"
        format_down = ""
        format_percentage = "%.00f%s"
        status_chr = "⚡ CHR"
        status_bat = "BAT"
        status_unk = "? UNK"
        status_full = "☻ FULL"
        low_threshold = 20
        threshold_type = "percentage"
}

cpu_temperature 0 {
        format = "%degrees ºC"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
        #path = "/sys/devices/platform/coretemp.0/hwmon/hwmon6/temp2_input"
        max_threshold = 75
}

cpu_usage {
        format = "cpu (%usage) %cpu0 %cpu1 %cpu2 %cpu3"
        #format = "cpu (%usage) %cpu0 %cpu1"
        max_threshold = 75
}

disk "/" {
        format = "/ %used/%avail"
        format_below_threshold = "/ %used/%avail"
        low_threshold = 10
        threshold_type = percentage_avail
}

ethernet _first_ {
        format_up = "eth"
        format_down = "eth"
        color_good = "#dfdfdf"
        color_bad = "#555555"
}

memory {
        format = "mem %used/%total shared %shared"
        threshold_critical = "1G"
}

tztime local {
        format = "%Y-%m-%d %a, %H:%M"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
}

wireless _first_ {
        format_up = "wlan"
        format_down = "wlan"
        color_good = "#dfdfdf"
        color_bad = "#555555"
}

